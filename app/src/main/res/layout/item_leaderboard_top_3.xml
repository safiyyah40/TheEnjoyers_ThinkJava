<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp">

    <!-- Juara 2 -->
    <LinearLayout
        android:id="@+id/layout_rank_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/layout_rank_1"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_rank_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="3dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:strokeColor="#C0C0C0"
            app:strokeWidth="3dp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_name_rank_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="Meghan Jes..." />

        <TextView
            android:id="@+id/tv_score_rank_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            tools:text="40 pts" />
    </LinearLayout>


    <!-- Juara 1 -->
    <LinearLayout
        android:id="@+id/layout_rank_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/mahkota"
            app:tint="#FFD700" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_rank_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="3dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:strokeColor="#FFD700"
            app:strokeWidth="3dp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_name_rank_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="Bryan Wolf" />

        <TextView
            android:id="@+id/tv_score_rank_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            tools:text="43 pts" />
    </LinearLayout>

    <!-- Juara 3 -->
    <LinearLayout
        android:id="@+id/layout_rank_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/layout_rank_1">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_rank_3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="3dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:strokeColor="#CD7F32"
            app:strokeWidth="3dp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_name_rank_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="Alex Turner" />

        <TextView
            android:id="@+id/tv_score_rank_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            tools:text="38 pts" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>