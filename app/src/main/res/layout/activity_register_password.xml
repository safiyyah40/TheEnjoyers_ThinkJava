<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00999F"
    tools:context=".RegisterPassword">

    <View
        android:id="@+id/background_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/background_card_top_corners"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="Buat Kata Sandi"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Buatlah password anda untuk melanjutkan membuat akun"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textView10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- EditText Password -->
    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Masukkan Password"
        android:paddingStart="16dp"
        android:paddingEnd="56dp"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/textView11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Icon Visibility Password -->
    <ImageButton
        android:id="@+id/buttonTogglePassword"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="32dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:contentDescription="Toggle Password Visibility"
        android:src="@drawable/visibility"
        app:layout_constraintTop_toTopOf="@id/editTextText4"
        app:layout_constraintBottom_toBottomOf="@id/editTextText4"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- EditText Konfirmasi Password -->
    <EditText
        android:id="@+id/editTextConfirmPassword"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Konfirmasi Password"
        android:paddingStart="16dp"
        android:paddingEnd="56dp"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/editTextText4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Icon Visibility Konfirmasi Password -->
    <ImageButton
        android:id="@+id/buttonToggleConfirmPassword"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="32dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:contentDescription="Toggle Confirm Password Visibility"
        android:src="@drawable/visibility"
        app:layout_constraintTop_toTopOf="@id/editTextConfirmPassword"
        app:layout_constraintBottom_toBottomOf="@id/editTextConfirmPassword"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button Selanjutnya -->
    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginTop="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#FF6315"
        android:padding="14dp"
        android:text="Selanjutnya"
        app:layout_constraintTop_toBottomOf="@id/editTextConfirmPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button Kembali -->
    <Button
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#CED4DA"
        android:padding="14dp"
        android:text="Kembali"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/button5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
